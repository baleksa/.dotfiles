#!/bin/sh

current_kblayout=$(
	swaymsg -t get_inputs |
		jq -r '.[0] | select(.identifier == "0:0:Wireless_hotkeys") | .xkb_active_layout_name'
)

date=$(date +'%a %d-%m-%Y %R:%S')

bat_perc="$(cat /sys/class/power_supply/BAT0/capacity)"
if [ "$bat_perc" -lt 100 ]; then
	bat_perc="  ${bat_perc}%ï•¿"
else
	bat_perc=""
fi

echo "${current_kblayout}  ${date}${bat_perc}"
